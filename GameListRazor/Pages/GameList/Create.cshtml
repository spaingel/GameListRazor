@page
@model GameListRazor.Pages.GameList.CreateModel

<br />
<h2 class="text-info">Create New Game</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Game.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Game.Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Game.GameSystem"></label>
            </div>
            <div class="col-6">
                <input asp-for="Game.GameSystem" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Game.Genre"></label>
            </div>
            <div class="col-6">
                <input asp-for="Game.Genre" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>